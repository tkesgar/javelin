{
  "apps": [
    {
      "name": "javelin",
      "script": "npm",
      "args": "start -- -p 6001",
      "cwd": "/home/node/apps/javelin/current/"
    }
  ],
  "deploy": {
    "production": {
      "user": "node",
      "host": "tkesgar.com",
      "ref": "origin/master",
      "repo": "git@github.com:tkesgar/javelin.git",
      "path": "/home/node/apps/javelin",
      "pre-deploy-local": "npm run build && rsync -vrth --progress --delete --exclude='cache*' .next/ node@tkesgar.com:/home/node/apps/javelin/current/.next/",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.json"
    }
  }
}
